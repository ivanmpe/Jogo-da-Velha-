<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ivan.jogodavelha.MainActivity">

    <Button
        android:id="@+id/quinto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/segundo"
        android:layout_below="@+id/segundo"
        android:fontFamily="sans-serif-medium"
        android:onClick="quinto"
        android:textSize="18sp" />

    <Button
        android:id="@+id/oitavo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/quinto"
        android:layout_below="@+id/quinto"
        android:onClick="oitavo"
        android:textSize="18sp" />

    <Button
        android:id="@+id/terceiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/segundo"
        android:layout_alignBottom="@+id/segundo"
        android:layout_toEndOf="@+id/segundo"
        android:onClick="terceiro"
        android:textSize="18sp" />

    <Button
        android:id="@+id/sexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quinto"
        android:layout_alignBottom="@+id/quinto"
        android:layout_toEndOf="@+id/segundo"
        android:onClick="sexto"
        android:textSize="18sp" />

    <Button
        android:id="@+id/nono"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sexto"
        android:layout_toEndOf="@+id/oitavo"
        android:onClick="nono"
        android:textSize="18sp" />

    <Button
        android:id="@+id/segundo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/primeiro"
        android:layout_alignBottom="@+id/primeiro"
        android:layout_centerHorizontal="true"
        android:onClick="segundo"
        android:textSize="18sp" />

    <Button
        android:id="@+id/setimo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/quarto"
        android:layout_below="@+id/quarto"
        android:onClick="setimo"
        android:textSize="18sp" />

    <Button
        android:id="@+id/quarto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/quinto"
        android:layout_alignBottom="@+id/quinto"
        android:layout_toStartOf="@+id/quinto"
        android:onClick="quarto"
        android:textSize="18sp" />

    <Button
        android:id="@+id/primeiro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="137dp"
        android:layout_toStartOf="@+id/segundo"
        android:onClick="primeiro"
        android:textSize="18sp"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/ordem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:text="@string/vez_do_x"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="normal|bold"
        android:layout_below="@+id/segundojogador"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="13dp"
        android:text="@string/by_ivans"
        android:textColor="@android:color/background_light"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/segundojogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/vs" />

    <TextView
        android:id="@+id/vs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/vs"
        android:textColor="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/segundojogador" />

    <TextView
        android:id="@+id/primeirojogador"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/vs" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/oitavo"
        android:layout_marginTop="26dp"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="normal|bold" />

    <Button
        android:id="@+id/zera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/resultado"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp"
        android:onClick="zera"
        android:text="Reiniciar Partida"
        android:visibility="invisible" />

</RelativeLayout>
